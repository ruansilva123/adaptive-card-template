{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                    {
                        "type": "TextBlock",
                        "text": "@{variables('Customer Group')}",
                        "weight": "Bolder",
                        "size": "extraLarge",
                        "color": "accent"
                    },
                    {
                        "type": "TextBlock",
                        "text": "Acquisition News",
                        "size": "Small",
                        "color": "Default",
                        "spacing": "None"
                    }
                    ]
                }
            ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "altText": "supergraphic",
          "url": "https://boschferramentasbrasil.vtexassets.com/assets/vtex/assets-builder/boschferramentasbrasil.builderio/3.1.22/common/common-line___ae68905b672d64f2721afc9c6a22c616.jpg"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "size": "large",
          "altText": "logo_en",
          "url": "https://c.smartrecruiters.com/sr-company-logo-prod-dc5/58652035e4b04016904de9fe/150px?r=s3-eu-central-1"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "medium",
      "style": "default",
      "items": [
        {
          "type": "TextBlock",
          "text": "Acquisition Project",
          "horizontalAlignment": "Center",
          "weight": "Bolder",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "@{variables('Sales Project Name')}",
          "wrap": true,
          "horizontalAlignment": "Center",
          "weight": "Bolder",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "@{variables('Configuration Name')}",
          "wrap": true,
          "horizontalAlignment": "Center",
          "spacing": "None",
          "size": "Medium"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "extraLarge",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "DOS+5 (mEUR)",
                  "horizontalAlignment": "Center",
                  "size": "small"
                },
                {
                  "type": "TextBlock",
                  "text": "@{variables('Dos5')}",
                  "horizontalAlignment": "Center",
                  "size": "large",
                  "weight": "bolder",
                  "color": "accent"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "EBIT (%)",
                  "horizontalAlignment": "Center",
                  "size": "Small"
                },
                {
                  "type": "TextBlock",
                  "text": "@{variables('EBIT(SOP4)')}",
                  "horizontalAlignment": "Center",
                  "size": "large",
                  "weight": "Bolder",
                  "color": "accent"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "spacing": "extraLarge",
      "size": "medium",
      "wrap": true,
      "separator": true,
      "text": "**PS/SCP-LA** is pleased to announce the acquisition of a new client. See details below:"
    },
    {
      "type": "FactSet",
      "facts": [
        { "title": "Product/Service", "value": "@{variables('Product Class')}"},
        { "title": "Production Plant", "value": "@{variables('Production Plant')}" },
        { "title": "SOP", "value": "@{variables('EBIT(SOP4)')}" },
        { "title": "Sold to customer", "value": "@{variables('Customer Group')}" },
        { "title": "Competitor", "value": "@{variables('Competitor')}" }
      ]
    },
    {
        "type": "ActionSet",
        "spacing": "extraLarge",
        "actions": [
            {
            "type": "Action.OpenUrl",
            "title": "More details & dashboard click here",
            "url": "https://exemplo.com"
            }
        ]
    }
  ]
}
